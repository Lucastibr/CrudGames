@model CrudGames.Models.Game
@{
    ViewData["Title"] = "Create";
}
 
<h4>Crud de Games - Editar</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameId"/>
            <div class="form-group">
                <label asp-for="NomeDoJogo" class="control-label"></label>
                <input asp-for="NomeDoJogo" class="form-control" />
                <span asp-validation-for="NomeDoJogo" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="PrecoDoJogo" class="control-label"></label>
                    <input asp-for="PrecoDoJogo" class="form-control" />
                    <span asp-validation-for="PrecoDoJogo" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Categoria" class="control-label"></label>
                    <input asp-for="Categoria" class="form-control" />
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
                <div  class="form-group col-md-6">
                    <a asp-action="Index"  class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
 
 
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}