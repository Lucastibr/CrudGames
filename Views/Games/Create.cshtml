@model CrudGames.Models.Game

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeDoJogo" class="control-label"></label>
                <input asp-for="NomeDoJogo" class="form-control" />
                <span asp-validation-for="NomeDoJogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoDoJogo" class="control-label"></label>
                <input asp-for="PrecoDoJogo" class="form-control" />
                <span asp-validation-for="PrecoDoJogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
